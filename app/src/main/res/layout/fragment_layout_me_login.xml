<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_Main_Text_Wihte"
    android:orientation="vertical"
    android:weightSum="11">

    <include
        layout="@layout/include_layout_viewtop_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_et_name_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_layout_circle_withe"
                android:drawableLeft="@mipmap/ic_me_loginname"
                android:drawablePadding="5dp"
                android:hint="请输入您的用户名或手机号"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Fourteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_tv_namephone_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="会员名必须为4-20位数字、字母或下划线"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_et_pws_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_layout_circle_withe"
                android:drawableLeft="@mipmap/ic_me_loginpws"
                android:drawablePadding="5dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Fourteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_tv_pwslogin_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="请输入6-18位数字或字母"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_bt_submit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout_circle_loginbuttonno"
                android:clickable="false"
                android:gravity="center"
                android:text="登\t录"
                android:textColor="@android:color/white"
                android:textSize="@dimen/Seventeen" />

            <TextView
                android:id="@+id/login_tv_forget_pws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="忘记密码?"
                android:textColor="@color/Color_Inves_Text_Gray" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>