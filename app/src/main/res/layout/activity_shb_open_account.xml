<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shb_open_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_View_Main_Background"
    android:orientation="vertical"
    tools:context="com.cxd.cxd4android.shbbank.openaccount.SHBOpenAccountActivity">

    <include
        layout="@layout/include_layout_viewtop_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Color_Main_Text_Wihte"
            android:orientation="vertical">
            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/activity_open_account_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:textColorHint="#FFA8ADBA"
                    android:textSize="12sp" />

            </LinearLayout>
            <!--横线-->
            <include layout="@layout/include_layout_viewline_horizontal" />
            <!--身份证-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="身份证" />

                <EditText
                    android:id="@+id/activity_open_account_idcard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:textColorHint="#FFA8ADBA"
                    android:textSize="12sp" />

            </LinearLayout>
            <!--横线-->
            <include layout="@layout/include_layout_viewline_horizontal" />
            <!--银行卡-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="银行卡" />

                <EditText
                    android:id="@+id/activity_open_account_bankcard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="请输入银行卡号"
                    android:textColorHint="#FFA8ADBA"
                    android:textSize="12sp" />

            </LinearLayout>
            <!--横线-->
            <include layout="@layout/include_layout_viewline_horizontal" />
            <!--开户行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开户行" />

                <LinearLayout
                    android:id="@+id/activity_ll_openaccount_bankname"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_open_account_bankname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="请选择开户行"
                    android:textColorHint="#FFA8ADBA"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_common_right"/>
                </LinearLayout>
            </LinearLayout>
            <!--横线-->
            <include layout="@layout/include_layout_viewline_horizontal" />
            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/activity_open_account_phonenum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColorHint="#FFA8ADBA"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="*开户时银行卡的预留手机号需与注册手机号一致！"
            android:textColor="#FF5B57"
            android:textSize="12sp" />
        <!--按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="15dp">

            <Button
                android:id="@+id/activity_open_account_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF3D64B4"
                android:text="提交"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@mipmap/shb_bank"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#A8ADBA"
                android:text="由上海银行提供存管服务" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
