<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_Main_Text_Wihte"
    android:orientation="vertical"
    android:weightSum="11">

    <include
        layout="@layout/include_layout_viewtop_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/forget_et_phone_num"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_layout_circle_withe"
                android:drawableLeft="@mipmap/ic_me_regisphone"
                android:hint="请输入您的手机号"
                android:padding="10dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Fourteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forget_tv_phonenum_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="invisible"
                android:text="号码有误请核对后重新输入"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_et_phonenum_code"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/shape_layout_circle_withe"
                android:drawableLeft="@mipmap/ic_me_loginpws"
                android:hint="请输入手机验证码"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:inputType="number"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Fourteen" />

            <Button
                android:id="@+id/forget_bt_get_code"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_layout_circle_loginbutton"
                android:clickable="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@android:color/white"
                android:textSize="@dimen/Fourteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/forget_tv_code_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="invisible"
                android:text="验证码有误请核对后重新输入"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/forget_bt_submit_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout_circle_loginbuttonno"
                android:clickable="true"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@android:color/white"
                android:textSize="@dimen/Seventeen" />
            <TextView
                android:id="@+id/registerverifi_tv_have_account"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_gravity="right"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>