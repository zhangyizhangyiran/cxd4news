<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout android:id="@+id/shb_layout_select_item"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:weightSum="8">

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:layout_weight="1.5"
                      android:gravity="left">
            <ImageView android:id="@+id/shb_activity_bank_icon"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:paddingLeft="12dp"
                       android:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_margin="10dp"
                      android:layout_weight="5.5"
                      android:gravity="center_vertical"
                      android:orientation="vertical">
            <TextView android:id="@+id/shb_tv_bank_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="工商银行"/>

            <TextView android:id="@+id/shb_activity_bank_explain"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="工商银行"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="20dp"
                      android:layout_weight="1">
            <ImageView android:layout_width="match_parent"
                       android:id="@+id/shb_activity_bank_icon_select"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/shb_select"
                       android:visibility="invisible"/>

        </LinearLayout>


    </LinearLayout>
    <include layout="@layout/include_layout_viewline_horizontal"/>

</LinearLayout>