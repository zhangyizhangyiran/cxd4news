<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_Main_Text_Wihte"
    android:orientation="vertical"
    android:weightSum="11">

    <include
        layout="@layout/include_layout_viewtop_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/registerinfo_et_user_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawablePadding="5dp"
                android:background="@drawable/shape_layout_circle_withe"
                android:drawableLeft="@mipmap/ic_me_loginname"
                android:hint="请输入用户名（由6~16位字母、数字组成）"
                android:padding="10dp"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Fourteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registerinfo_tv_username_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="invisible"
                android:text="用户名必须为6-16位字母和数字组合"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/registerinfo_et_login_pws"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_layout_circle_withe"
                android:drawableLeft="@mipmap/ic_me_loginpws"
                android:hint="请输入密码（由6~16位字母、数字组成）"
                android:padding="10dp"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Fourteen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registerinfo_tv_loginpws_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="invisible"
                android:text="请输入6-16位字母和数字组合"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/registerinfo_et_referee_name"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:background="@drawable/shape_layout_circle_withe"
                android:hint="填写推荐人手机号\t(可不填)"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="@color/Color_Main_Text_title"
                android:textColorHint="@color/Color_Inves_Text_Gray"
                android:singleLine="true"
                android:textSize="@dimen/Fourteen" />

            <!--<Button
                android:id="@+id/registerinfo_bt_get_refereename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/activity_button_selector_withdrawals"
                android:clickable="true"
                android:gravity="center"
                android:text="邀请码"
                android:textColor="@android:color/white"
                android:textSize="@dimen/Seventeen" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registerinfo_tv_refereename_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="invisible"
                android:text="推荐人号码不存在,请重新输入！"
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/Color_Bout_Text_Red"
                android:textSize="@dimen/Twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_bt_submit_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout_circle_loginbuttonno"
                android:clickable="false"
                android:gravity="center"
                android:text="注\t册"
                android:textColor="@android:color/white"
                android:textSize="@dimen/Seventeen" />

            <TextView
                android:id="@+id/register_tv_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>