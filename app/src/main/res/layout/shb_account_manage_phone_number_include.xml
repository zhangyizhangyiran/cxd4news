<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/shb_layout_account_phone_number"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/Color_Main_Text_Wihte"
              android:orientation="vertical"
              android:paddingLeft="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="银行卡预留手机号"
            android:textColor="#FF34415A"
            android:textSize="@dimen/Fifteens"/>

        <TextView
            android:id="@+id/shb_tv_account_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/ic_common_right"
            android:text=""
            android:textColor="@color/Color_Inves_Text_Gray"
            android:textSize="@dimen/Thirteen"/>
    </LinearLayout>

    <include
        layout="@layout/include_layout_viewline_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

</LinearLayout>