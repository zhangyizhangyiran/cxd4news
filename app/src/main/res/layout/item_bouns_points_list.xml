<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_bouns_points_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1px"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_list_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_bouns_points_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:text="商品标题"
                android:textColor="@color/Color_Main_Text_title"
                android:textSize="16sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/item_bouns_points_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="库存：5"
                android:textColor="@color/Color_Bout_Text_Gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_bouns_points_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/Color_Me_bonus_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_bouns_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/item_bouns_points_count"
                android:text="积分"
                android:textColor="@color/Color_Bout_Text_Gray"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_bouns_points_img"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:contentDescription="@string/item_bouns"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:padding="3dp"
        android:src="@mipmap/point_bg" />

</LinearLayout>