<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="8dp"
              android:id="@+id/shb_layout_gensture"
              android:background="@color/Color_Main_Text_Wihte"
              android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="手势密码"
                android:gravity="center_vertical"
                android:textColor="#FF34415A"
                android:textSize="@dimen/Fifteens"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:background="@mipmap/ic_common_right"
                android:textColor="@color/Color_Inves_Text_Gray"
                android:textSize="@dimen/Thirteen"/>
        </LinearLayout>

    <include
        layout="@layout/include_layout_viewline_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
</LinearLayout>