<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shbrisk_assessment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cxd.cxd4android.shbbank.accountmanagement.SHBRiskAssessmentActivity">
    <include
        layout="@layout/include_layout_viewtop_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
    </include>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="9.8"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginTop="30dp"
                  android:layout_weight="1"
                  android:text="您的评估结果为："/>

        <TextView android:id="@+id/shb_activity_tv_type"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginTop="16dp"
                  android:layout_weight="1"
                  android:text="保守型"
                  android:textColor="#2a65cc"
                  android:textSize="30sp"/>
        <TextView android:id="@+id/shb_activity_tv_explain"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_margin="16dp"
                  android:layout_weight="2"
                  android:text="我访问服务金额非玩家反馈基尔霍夫嫁为人妇违法和违法违法违纪覅违法鸡尾酒风味咖啡今晚可分为覅无法加我"/>

        <Button android:id="@+id/shb_activity_but_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="#f58f7a"
                android:text="马上赚钱"
                android:textColor="@android:color/white"/>

        <TextView android:id="@+id/shb_activity_tv_remeasure"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginTop="30dp"
                  android:layout_weight="3"
                  android:gravity="center"
                  android:text="重测"
                  android:textColor="#5a7fcf"/>

    </LinearLayout>

</LinearLayout>
